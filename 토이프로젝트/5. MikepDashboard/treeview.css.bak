.treeview {
    align-items: center;
}

.ti{
    font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.treeview ul{
    list-style-type: none;
    font-size: 14px;
}
.treeview ul li div{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 5px;
}
.treeview .node-position, .node-name{
    transform: translateY(3px);
}

.treeview .right-arrow.active{
    transform: rotate(90deg);
    transition: 0.2s ease-out;
}
.treeview .folder{
    color: var(--color-cobalt-blue);
}


.nested{
    padding-left: 30px;
    display : none;
}
.nested.active{
    display: block;
}
.angleDown::before{
    transform: rotate(90deg);
    transition: 0.2s ease-out;
}
